# Copy this to .env.local and fill in your actual values
# NEVER commit .env.local to git - it's in .gitignore

# Server Configuration
PORT=5001
NODE_ENV=production

# Security
JWT_SECRET=your_jwt_secret_here
ADMIN_EMAILS=your_admin_email@example.com
AI_BACKEND_SECRET=your_long_random_string

# Google AI
GOOGLE_API_KEY=your_google_api_key

# Replicate
REPLICATE_API_TOKEN=your_replicate_token

# Optional: Enable auto-upscale (true/false)
AI_AUTO_UPSCALE=false

# MongoDB Connection (for both Prisma and Mongoose)
MONGODB_URI="your_mongodb_uri"
DATABASE_URL="your_mongodb_uri"

# Frontend Configuration - UPDATE THESE FOR PRODUCTION
NEXT_PUBLIC_API_URL=https://your-site-name.netlify.app

# Paystack
PAYSTACK_SECRET_KEY=your_paystack_secret
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=your_paystack_public_key
NEXT_PUBLIC_APP_URL=https://your-site-name.netlify.app
